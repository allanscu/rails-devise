<!-- BEGIN LOGIN FORM -->
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form', :class => 'login-form'}) do |f| %>
    <h3 class="form-title font-green">Sign In</h3>
    <%= devise_error_messages! %>
    <div class="alert alert-danger display-hide">
      <button class="close" data-close="alert"></button>
      <span> Enter any username and password. </span>
    </div>

    <div class="form-group">
      <%= f.email_field :email, :autofocus => true, class: 'form-control form-control-solid placeholder-no-fix' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: 'form-control form-control-solid placeholder-no-fix' %>
    </div>

    <div class="form-actions">
      <%= f.submit 'Login', :class => 'btn green uppercase' %>

      <% if devise_mapping.rememberable? -%>
          <label class="rememberme check mt-checkbox mt-checkbox-outline">
            <%= f.check_box :remember_me %> Remember
            <span></span>
          </label>
      <% end -%>

      <%- if devise_mapping.recoverable? %>
          <%= link_to 'Forgot password?', new_password_path(resource_name), class: 'forget-password' %>
      <% end -%>
    </div>

    <div class="create-account">
      <p>
        <%- if devise_mapping.registerable? %>
            <%= link_to 'Create an account', new_registration_path(resource_name), class: 'uppercase'  %>
        <% end -%>
      </p>
    </div>

<% end %>
<!-- END LOGIN FORM -->
