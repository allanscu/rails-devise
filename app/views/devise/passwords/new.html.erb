<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
    <h3>Forgot your password?</h3>
    <p>We'll send password reset instructions.</p>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.email_field :email, :autofocus => true, class: 'form-control', :placeholder => 'Your email address' %>
    </div>
    <%= link_to 'Back to Login', new_user_session_path, :class => 'btn green btn-outline' %>
    <%= f.submit 'Reset Password', :class => 'btn btn-success uppercase pull-right' %>
<% end %>
