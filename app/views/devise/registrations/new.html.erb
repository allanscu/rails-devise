<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Sign up</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.text_field :name, :autofocus => true, class: 'form-control', :placeholder => 'Your Name' %>
    </div>
    <div class="form-group">
      <%= f.email_field :email, class: 'form-control', :placeholder => 'Email' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: 'form-control', :placeholder => 'Password' %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, class: 'form-control', :placeholder => 'Password Confirm' %>
    </div>
    <div class="form-actions">
      <%= link_to 'Back to Login', new_user_session_path, :class => 'btn green btn-outline' %>
      <%= f.submit 'Sign up', :class => 'btn btn-success uppercase pull-right' %>
    </div>
<% end %>
