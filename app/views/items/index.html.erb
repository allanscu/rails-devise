<div class='col-sm-6 col-lg-4'>
  <% @items.each do |item| %>
    <div class="card">
      <div class="card-block">
      	<h4 class="card-title"><%= link_to item.name, company_item_path(item.company, item) %></h4>
        <p class="card-text"><%= truncate(item.description, length: 130) %></p>
        <h5 class="card-title"><%= item.company.name %></h5>
        <% if current_user.try(:admin?) %>
          <%= link_to 'Edit', edit_item_path(item), class: 'btn btn-sm btn-warning' %>
  		    <%= link_to 'Remove', item_path(item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<br />
<br />

<% if current_user.try(:admin?) %>
  <%= link_to 'New Item', new_item_path %>
<% end %>