<p class="small">
  Total: <%= @users.total_entries %> users
</p>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Full Name</th>
      <th>Email</th>
      <th>Member At</th>
      <th>Last Login</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <%= render user %>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= render 'shared/page_size_control', name: @page_name, value: @page_value, count: @users.total_entries %>
    <%= render 'shared/will_paginate', object: @users %>
  </div>
</div>