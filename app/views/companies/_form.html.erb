<%= form_with(model: company, local: true) do |form| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="row">
    <div class="col-md-12">
      <div class="card"">
        <div class="card-block">
        <% if @company.new_record? %>
            <h4 class="card-title">New company</h4>
        <% else %>
          <h4 class="card-title">
            <b>Edit</b>
            <span class="thin-text"><%= @company.name %></span>
          </h4>
        <% end %>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <div class="field">
              <%= form.label :name %>
              <%= form.text_field :name, id: :name, required: true, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
                <%= form.label :address1 %>
                <%= form.text_field :address1, id: :company_address1, required: true, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
                <%= form.label :address2 %>
                <%= form.text_field :address2, id: :company_address2, required: false, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
                <%= form.label :address3 %>
                <%= form.text_field :address3, id: :company_address3, required: false, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
                <%= form.label :city %>
                <%= form.text_field :city, id: :company_city, required: true, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
                <%= form.label :state_code %>
                <%= form.text_field :state_code, id: :company_state_code, required: true, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
                <%= form.label :zip_code %>
                <%= form.text_field :zip_code, id: :company_zip_code, required: true, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
                <%= form.label :country_code %>
                <%= form.text_field :country_code, id: :company_country_code, required: true, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
                <%= form.label :website %>
                <%= form.text_field :website, id: :company_website, required: false, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
                <%= form.label :email %>
                <%= form.text_field :email, id: :company_email, required: false, class: 'form-control' %>
            </div>
          </li>
          <% if @company.persisted? %>
            <li class="list-group-item">
              <div class="field">
                <%= form.label :latitude %>
                <%= form.text_field :latitude, id: :company_latitude, required: false, class: 'form-control' %>
              </div>
            </li>
            <li class="list-group-item">
              <div class="field">
                <%= form.label :longitude %>
                <%= form.text_field :longitude, id: :company_longitude, required: false, class: 'form-control' %>
              </div>
            </li>
          <% end %>
          <li class="list-group-item">
            <div class="actions">
              <%= form.submit "Save company", class: 'btn btn-success btn-lg btn-block' %>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="card"">
        <% if @company.persisted? %>
          <%= link_to 'Show', company %> |
        <% end %>
        <%= link_to 'Back', companies_path %>
      </div>
    </div>
  </div>
<% end %>
