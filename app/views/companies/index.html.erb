<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>Address3</th>
      <th>City</th>
      <th>State code</th>
      <th>Zip code</th>
      <th>Country code</th>
      <th>Formatted</th>
      <th>Website</th>
      <th>Email</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.address1 %></td>
        <td><%= company.address2 %></td>
        <td><%= company.address3 %></td>
        <td><%= company.city %></td>
        <td><%= company.state_code %></td>
        <td><%= company.zip_code %></td>
        <td><%= company.country_code %></td>
        <td><%= company.formatted_address %></td>
        <td><%= company.website %></td>
        <td><%= company.email %></td>
        <td><%= company.latitude %></td>
        <td><%= company.longitude %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.try(:admin?) %>
  <%= link_to 'New Company', new_company_path %>
<% end %>
