<p id="notice"><%= notice %></p>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>State code</th>
      <th>Zip code</th>
      <th>Country code</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @companies.each do |company| %>
        <tr>
          <td>
            <b><%= link_to company.name, company %></b>
            <div class="small">
              <div><%= company.website %></div>
              <div><%= company.email %></div>
              <%= company.formatted_address %>
            </div>
          </td>
          <td>
            <div><%= company.address1 %></div>
            <div><%= company.address2 %></div>
            <div><%= company.address3 %></div>
          </td>
          <td><%= company.city %></td>
          <td><%= company.state_code %></td>
          <td><%= company.zip_code %></td>
          <td><%= company.country_code %></td>
          <td><%= company.latitude %></td>
          <td><%= company.longitude %></td>
          <td class="text-right">
            <%= link_to raw('<i class="fa fa-edit"></i>Edit'), edit_company_path(company), :class => 'btn btn-outline btn-circle dark btn-sm black' %>
            <%= link_to raw('<i class="fa fa-trash-o"></i>Delete'), company, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline btn-circle red btn-sm blue' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="small">
  Total: <%= @companies.count %> companies
</div>

<br>
<% if current_user.try(:admin?) %>
  <%= link_to 'New Company', new_company_path %>
<% end %>
