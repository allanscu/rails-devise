<% provide(:page_title, @company.name) %>

<div class="row">
  <div class="col-8">
    <h1><%= @company.name %></h1>
    <%= @company.address1 %>
    <%= @company.address2 %>
    <%= @company.address3 %>
    <br />
    <%= @company.city %> <%= @company.state_code %> <%= @company.zip_code %>
    <br />
    <%= link_to @company.website, @company.website %>
    <br />
    <%= @company.email %><%= @company.slug %>
    <div class="col-12">
    </div>
    <div class="col-12">
    </div>
  </div>
  <div class="col-4">
    Place holder for images & map
  </div>
</div>

<div class="row">
  <div class="col-12">
    <% @company.items.each do |i| %>
      <%= link_to(i.name, company_item_path(i.company, i)) %>
      <br />
    <% end %>
  </div>
</div>
    
<% if current_user.try(:admin?) %>
  <%= link_to 'Edit', edit_company_path(@company) %> |
<% end %>
<%= link_to 'Back', companies_path %>