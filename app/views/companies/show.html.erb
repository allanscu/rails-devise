<% provide(:page_title, @company.name) %>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-block">
        <h1><%= link_to @company.name, "http://#{@company.website}" %></h1>
      </div>
      <div class="col-md-12">
        <div class="card-stat">
          <div class="card-block-stat">
            <h2>Chance of release today</h2>
            <h1>High</h1>
          </div>
        </div>
      </div>
      <div class="col-sm-12 col-md-6">
        <div class="card-stat">
          <div class="card-block-stat">
            <h2>Last release</h2>
            <%= adjusted_datetime.strftime("%A") %>
            <br />
            <%= adjusted_datetime.strftime("%B %d, %Y at %H:%M %p") %>
            <h3><%= @company.items.order(release_date: :asc).last.name %></h3>
          </div>
        </div> 
      </div>
      <div class="col-sm-12 col-md-6">
        <div class="card-stat">
          <div class="card-block-stat">
            <h2>Time since</h2>
            <h5><%= distance_of_time_in_words(Time.now, @company.items.order(release_date: :asc).last.release_date, true) %> ago</h5>
          </div>
        </div> 
      </div>          
    </div>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <% @company.items.each do |i| %>
      <%= link_to(i.name, company_item_path(i.company, i)) %>
      <br />
    <% end %>
  </div>
</div>
    
<% if current_user.try(:admin?) %>
  <%= link_to 'Edit', edit_company_path(@company) %> |
<% end %>
<%= link_to 'Back', companies_path %>