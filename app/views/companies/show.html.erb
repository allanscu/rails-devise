<% provide(:page_title, @company.name) %>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-block">
        <h1><%= link_to @company.name, "http://#{@company.website}" %></h1>
      </div>
      <div class="col-md-12">
        <div class="card-stat">
          <div class="card-block-stat">
            <h2>Chance of release within 24 hours</h2>
            <h5>Last updated:  <%= (Time.now - 10.minutes).strftime("%B %d, %Y %H:%M %p") %></h5>
            <%= render "guage_can" %>
          </div>
        </div>
      </div>
      <div class="col-sm-12 col-md-6">
        <div class="card-stat">
          <div class="card-block-stat">
            <h2>Time since last release</h2>
            <h5><%= distance_of_time_in_words(Time.now.utc, @company.items.order(release_date: :asc).last.release_date, true) %> ago</h5>
          </div>
        </div> 
      </div>      
      <div class="col-sm-12 col-md-6">
        <div class="card-stat">
          <div class="card-block-stat">
            <h2>Last release</h2>
            <h5><%= (@company.items.order(release_date: :asc).last.release_date).to_datetime.strftime("%A, %B %d, %Y at %H:%M %p") %></h5>
            <h5><%= link_to @company.items.order(release_date: :asc).last.name, company_item_path(@company, @company.items.order(release_date: :asc).last)%></h5>
          </div>
        </div> 
      </div>
    </div>
  </div>
</div>
<br />
<br />
<br />
<%= render "items/item_card_index_listing" %>
    
<% if current_user.try(:admin?) %>
  <%= link_to 'Edit', edit_company_path(@company) %> |
<% end %>
<%= link_to 'Back', companies_path %>