<p id="notice"><%= notice %></p>


<p class="small">
  Total: <%= @hops.total_entries %> hops

  <%= link_to 'New Hop', new_hop_path, :class => 'btn btn-sm pull-right' %>
</p>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Slug</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @hops.each do |hop| %>
        <tr>
          <td><%= hop.name %></td>
          <td><%= hop.description %></td>
          <td><%= hop.slug %></td>
          <td class="text-right">
            <%= link_to raw('<i class="fa fa-share"></i> View'), hop, :class => 'btn btn-outline btn-circle dark btn-sm black' %>
            <%= link_to raw('<i class="fa fa-edit"></i> Edit'), edit_hop_path(hop), :class => 'btn btn-outline btn-circle dark btn-sm black' %>
            <%= link_to raw('<i class="fa fa-trash-o"></i> Delete'), hop, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-outline btn-circle red btn-sm blue' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= render 'shared/page_size_control', name: @page_name, value: @page_value, count: @hops.total_entries %>
    <%= render 'shared/will_paginate', object: @hops %>
  </div>
</div>